  "max_blocks": 4,
  "settings": [
  {
      "id": "bottom_column_one",
      "type": "text",
      "label": "Footer Bottom Column One",
      "default": "Copyright Mas Des Infermi√®res 2021"
  },
  {
      "id": "bottom_column_two",
      "type": "text",
      "label": "Footer Bottom Column Two",
      "default": "Sign up for exlusive news and updates"
  },
  {
      "id": "mbl_link",
      "type": "richtext",
      "label": "Add mobile Links"
  },
  {
      "id": "fb_link",
      "type": "url",
      "label": "Add Facebook Link"
  },
  {
      "id": "twi_link",
      "type": "url",
      "label": "Add Twitter Link"
  },
  {
      "id": "pin_link",
      "type": "url",
      "label": "Add Pinterest Link"
  },
  {
      "id": "insta_link",
      "type": "url",
      "label": "Add Insta Link"
  },
  {
      "id": "mbl_address",
      "type": "text",
      "label": "Add address for mobile"
  },
  {
      "id": "mbl_about",
      "type": "text",
      "label": "Add about for mobile"
  }
  ],
  "blocks": [
