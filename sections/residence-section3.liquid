<!----Stay Image Section Section---->
<section class="stayimg-section">
    <div class="container line">
        <div class="story-vl"></div>
        <div class="row">
            <div class="col-8 mbl-hide">
                <img class="stayimg1" src="{{ section.settings.left_img | img_url: 'master' }}" alt="">
                <span>01</span>
            </div>
            <div class="col-4 mbl-hide">
                <img class="stayimg2" src="{{ section.settings.right_img | img_url: 'master' }}" alt="">
            </div>
            <!-----Mobile Image-->
            <div class="col desk-hide">
                <img class="stayimg1-mbl" src="{{ section.settings.img_mbl | img_url: 'master' }}" alt="">
                <p class="stayimg-desmbl">{{ section.settings.text_mbl }}</p>
                <img class="tab-res2" src="{{ section.settings.img_mbl_full | img_url: 'master' }}" alt="">
            </div>
        </div>
    </div>
    <div class="container mbl-hide line">
        <div class="row stay-intro">
            <div class="col-md-6">
                <p>{{ section.settings.intro_body }}</p>
                <h5>{{ section.settings.intro_author }}</h5>
            </div>
            <div class="col-md-6 line-left">
                <img class="stayimg3" src="{{ section.settings.right_img_two | img_url: 'master' }}" alt="">
                <span>02</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <img class="stayimg4" src="{{ section.settings.right_img_two | img_url: 'master' }}" alt=""><br>
                <span style="margin-left:1%;">03</span>
            </div>
            <div class="col-md-6 stay-point line-left">
                <div class="numbrs">
                    <span>01</span>
                    <p>{{ section.settings.point_one }}</p>
                </div>
                <div class="numbrs">
                    <span>02</span>
                    <p>{{ section.settings.point_two }}</p>
                </div>
                <div class="numbrs">
                    <span>03</span>
                    <p>{{ section.settings.point_three }}</p>
                </div>
            </div>
        </div>
    </div>
</section>


{% schema %}
{
  "name": "Residence Section3",
  "settings": [
    {
        "id": "left_img",
        "type": "image_picker",
        "label": "Left Image Desktop"
    },
    {
        "id": "right_img",
        "type": "image_picker",
        "label": "Right Image Desktop"
    },
    {
      "id": "img_mbl",
      "type": "image_picker",
      "label": "Full Image For Mobile"
    },
    {
      "id": "text_mbl",
      "type": "text",
      "label": "Add Description for mobile"
    },
    {
      "id": "img_mbl_full",
      "type": "image_picker",
      "label": "Second Image For Mobile"
    },
    {
        "id": "intro_body",
        "type": "richtext",
        "label": "Add Detail",
        "default": "<p>THE SILENCE AND SUNSHINE ARE A SANCTUARY FROM MY PROFESSION. I LOVE TO COME HERE AND PAINT, READ, WRITE AND, HOPEFULLY, IMPROVE MY CORNER OF PROVENCE.</p>"
    },
    {
        "id": "intro_author",
        "type": "text",
        "label": "Add Author",
        "default": "RIDLEY SCOTT"
    },
    {
        "id": "right_img_two",
        "type": "image_picker",
        "label": "Right Image Desktop"
    },
    {
        "id": "left_img_two",
        "type": "image_picker",
        "label": "Left Image Desktop"
    },
    {
      "id": "point_one",
      "type": "text",
      "label": "Number One Text",
      "default": "The Provence air is lightly fragranced with lavendar and bay"
     },
    {
      "id": "point_two",
      "type": "text",
      "label": "Number Two Text",
      "default": "Syrah and Granache grapes are grown around the estate"
    },
    {
      "id": "point_three",
      "type": "text",
      "label": "Number Three Text",
      "default": "The Provence air is lightly fragranced with lavendar and bay"
     }
  ],
  "presets": [
    {
      "name": "Residence Section3",
      "category": "Custom"
    }
  ]
}
{% endschema %}